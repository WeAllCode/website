{
  "name": "We All Code",
  "scripts": {},
  "env": {
    "POETRY_VERSION": {
      "description": "Poetry Version",
      "value": "1.4.1"
    },
    "CONTACT_EMAIL": {
      "required": true
    },
    "DEBUG": {
      "required": true,
      "value": "True"
    },
    "DISABLE_COLLECTSTATIC": {
      "required": true,
      "value": "True"
    },
    "DEFAULT_FROM_EMAIL": {
      "required": true
    },
    "DJANGO_SECURE_SSL_REDIRECT": {
      "required": true
    },
    "ENABLE_DEV_FIXTURES": {
      "required": true
    },
    "SECRET_KEY": {
      "required": true
    },
    "SENDGRID_API_KEY": {
      "required": true
    },
    "SENDGRID_UNSUB_CLASSANNOUNCE": {
      "required": true
    },
    "SENTRY_DSN": {
      "required": true
    },
    "SLACK_WEBHOOK_URL": {
      "required": true
    },
    "RECAPTCHA_PUBLIC_KEY": {
      "required": true
    },
    "RECAPTCHA_PRIVATE_KEY": {
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "addons": ["heroku-postgresql", "logdna", "sendgrid"],
  "buildpacks": [
    {
      "url": "https://github.com/moneymeets/python-poetry-buildpack.git"
    },
    {
      "url": "heroku/python"
    }
  ]
}
